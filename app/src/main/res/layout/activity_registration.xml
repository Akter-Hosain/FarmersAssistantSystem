<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#DBB5E1"
    tools:context=".RegistrationActivity">
    <ImageView
        android:src="@drawable/rigisteredpic"
        android:id="@+id/ImageViewId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <EditText
        android:id="@+id/nameEditTextId"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:layout_margin="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="পুরো নাম"
        android:inputType="textEmailAddress"
        android:paddingTop="25dp"
        android:textColorHint="#151715" />
 <EditText
        android:id="@+id/emailEditTextId"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:layout_margin="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="ইমেইল  "
        android:inputType="textEmailAddress"
        android:paddingTop="25dp"
        android:textColorHint="#151715" />
<EditText
        android:id="@+id/passwordEditTextId"
        android:layout_width="365dp"
        android:layout_height="59dp"
        android:layout_margin="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="পাসওয়ার্ড  "
        android:inputType="textEmailAddress"
        android:paddingTop="25dp"
        android:textColorHint="#151715" />
    <Button
        android:background="#82C831"
        android:textAllCaps="false"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:id="@+id/loginButtonId"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="নিবন্ধন করুন"
        android:textStyle="bold"
        android:textSize="20dp"

        />

</LinearLayout>